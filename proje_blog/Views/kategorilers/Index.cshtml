@model IEnumerable<proje_blog.DAL.kategoriler>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layouttwo.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header text-center">Kategoriler</h1>
        </div>
        <!--End Page Header -->
        <div class="col-lg-12">
            <div class="alert alert-info">
                @using (proje_blog.DAL.MyBlogSiteEntities db = new proje_blog.DAL.MyBlogSiteEntities())
                {
                    foreach (var item in db.kullanicilar.ToList())
                    {
                        <marquee behavior=alternate><i class="fa fa-folder-open"></i><b>&nbsp;Merhaba ! </b><b>&nbsp;Hoş Geldiniz </b><b>@item.adi @item.soyadi</b></marquee>

                        <marquee behavior=alternate><i class="fa  fa-pencil"></i><b>&nbsp; @db.gonderiler.Count() </b><b>&nbsp;adet gönderiniz bulunmakta!</b></marquee>
                    }
                }

            </div>
        </div>
    </div>





    <div class="panel panel-default">
        <div class="panel-heading">
            Kategoriler
        </div>
        <p>
            @Html.ActionLink("Yeni kategori ekle", "Create")
        </p>
        <div class="panel-body" style="overflow:auto;overflow-x:hidden;height:350px">
            <div class="table-responsive">

                <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                    <thead>
                        <tr>
                            <th>Kategori başlığı</th>
                            <th>Haberler</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @using (proje_blog.DAL.MyBlogSiteEntities db = new proje_blog.DAL.MyBlogSiteEntities())
                        {
                            foreach (var i in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@i.kategori</td>
                                    <td>@db.gonderiler.Where(x=>x.katid==i.katid).Count() adet gönderi</td>
                                    <td>@Html.ActionLink("Güncelle", "Edit", new { id = i.katid }, new { @class = "btn btn-info" }) |
                                    @Html.ActionLink("Detay", "Details", new { id = i.katid }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = i.katid }, new { @class = "btn btn-danger" })</td>                                
                                </tr>

                            }
                        }


                    </tbody>
                </table>
            </div>

        </div>
    </div>

    </div>