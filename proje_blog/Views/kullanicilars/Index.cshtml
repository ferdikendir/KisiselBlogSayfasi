@model IEnumerable<proje_blog.DAL.kullanicilar>

@{
    ViewBag.Title = "Kullanıcı";
    Layout = "~/Views/Shared/_Layouttwo.cshtml";
}


<div id="page-wrapper">
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header text-center">Kullanıcı</h1>
        </div>
        <!--End Page Header -->
        <div class="col-lg-12">
            <div class="alert alert-info">
                @using (proje_blog.DAL.MyBlogSiteEntities db = new proje_blog.DAL.MyBlogSiteEntities())
                {
                    foreach (var item in db.kullanicilar.ToList())
                    {
                        <marquee behavior=alternate><i class="fa fa-folder-open"></i><b>&nbsp;Merhaba ! </b><b>&nbsp;Hoş Geldiniz </b><b>@item.adi @item.soyadi</b></marquee>

                        <marquee behavior=alternate><i class="fa  fa-pencil"></i><b>&nbsp; @db.gonderiler.Count() </b><b>&nbsp;adet gönderiniz bulunmakta!</b></marquee>
                    }
                }

            </div>
        </div>
    </div>
    <div class="row">
        <p>
            <a href="/gonderilers/Create" class="btn btn-default">Gönderi Paylaş</a>
        </p>
        <div class="panel panel-default">
            <div class="panel-heading">
                Tüm gönderiler
            </div>
            <div class="panel-body" style="overflow:auto;overflow-x:hidden;height:500px">
                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Mail</th>
                                <th>Hakkında</th>
                                <th>Telefon</th>
                                <th>Takma ad</th>
                                <th>Resim</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @using (proje_blog.DAL.MyBlogSiteEntities db = new proje_blog.DAL.MyBlogSiteEntities())
                            {
                                foreach (var i in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@i.adi</td>
                                        <td>@i.soyadi</td>
                                        <td>@i.mail</td>
                                        <td><p>@proje_blog.Models.htmltemiz.HTMLTemizle(i.hakkinda)</p></td>
                                        <td>@i.telefon</td>
                                        <td>@i.nick</td>                                  

                                        <td class="center"><img class="user-section-inner" src="@i.resim" /></td>
                                        <td>
                                            @Html.ActionLink("Güncelle", "Edit", new { id = i.id }) |
                                            @Html.ActionLink("Detay", "Details", new { id = i.id }) |
                                        </td>
                                    </tr>

                                }
                            }


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>